<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard x:Key="OpenMenuStoryboard">
        <DoubleAnimation Storyboard.TargetName="SideMenuGrid" Storyboard.TargetProperty="Width"
                         BeginTime="0:0:0"
                         From="35"
                         To="100"
                         Duration="0:0:0.2"/>
    </Storyboard>
    <Storyboard x:Key="CloseMenuStoryBoard">
        <DoubleAnimation Storyboard.TargetName="SideMenuGrid" Storyboard.TargetProperty="Width"
                         BeginTime="0:0:0"
                         From="100"
                         To="35"
                         Duration="0:0:0.2"/>
    </Storyboard>
</ResourceDictionary>